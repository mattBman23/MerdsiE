<div class="ps-content pt-80 pb-80">
    <div class="ps-container">
        <div class="ps-cart-listing">
            {{#if dCart.length}}
            <table class="table ps-cart__table">
                <thead>
                    <tr>
                        <th>All Products</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dCart}}
                    <tr>
                        <td><a class="ps-product__preview" href="product-detail.html"><img class="mr-15"
                                    src="images/product/cart-preview/1.jpg" alt="">{{shoeName}}</a></td>
                        <td>${{shoeCost}}</td>
                        <td>
                            <div class="ps-remove"></div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="ps-cart__actions">
                <div class="ps-cart__promotion">
                </div>
                <div class="ps-cart__total">
                    <h3>Total Price: <span>${{totalAmt}}</span></h3><a class="ps-btn" href="checkout.html">Process to
                        checkout<i class="ps-icon-next"></i></a>
                </div>
            </div>
            {{else}}
            <div class="container text-center">
                <h1>Cart is empty</h1>
                <br>
                <a href="/shoes" class="btn btn-success btn-lg">Back to shopping</a>
            </div>
            {{/if}}
        </div>
    </div>
</div>